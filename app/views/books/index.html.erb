<h1>Books</h1>
  <%= form_with model: @book, local: true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>

<% @books.each do |book| %>
  <div>
    <p>Title:
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </p>
    <p>Opinion:<%= book.body %></p>
  </div>
<% end %>
