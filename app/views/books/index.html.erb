<%= render "layouts/list_user_info", user: @user %>

<h1>New Book</h1>
  <%= form_with model: @book, local: true do |f| %>
    <%= render "layouts/error_messages2", model: f.object %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %>
    <% end %>
    <p>Title:
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </p>
    <p>Opinion:<%= book.body %></p>
  </div>
<% end %>
