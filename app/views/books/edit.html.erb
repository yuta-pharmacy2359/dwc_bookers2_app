<h1>Editing Book</h1>


  <%= form_with model: @book, local: true do |f| %>
    <%= render "layouts/error_messages2", model: f.object %>

    <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit "Update Book" %>
    </div>

  <% end %>

<%= link_to "Show", book_path(@book.id) %>
  |
<%= link_to "Back", books_path %>
