<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <% user ||= current_user %>
      <tr>
        <th>follows</th>
        <th>
          <a href="<%= following_user_path(user) %>">
            <strong id="following" class="stat">
              <%= user.following.count %>
            </strong>
          </a>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
          <a href="<%= followers_user_path(user) %>">
            <strong id="followers" class="stat">
              <%= user.followers.count %>
            </strong>
          </a>
        </th>
      </tr>
    </tbody>
  </table>
  <div class="button">
    <% if user == current_user %>
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
      <% end %>
    <% else %>
      <%= link_to "チャットする", chat_path(@user.id), class: "btn btn-outline-success btn-block go_to_chat" %>
      <%= render 'layouts/list_follow_form', user: user %>
    <% end %>
  </div>