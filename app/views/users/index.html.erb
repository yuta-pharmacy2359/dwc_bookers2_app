<h1>User info</h1>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<h1>New Book</h1>
  <%= form_with model: @book, local: true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>

<h1>Users</h1>
  <% @users.each do |user| %>
    <div>
      <p>name:<%= user.name %></p>
      <p><%= link_to "Show", user_path(user) %></p>
    </div>
  <% end %>
